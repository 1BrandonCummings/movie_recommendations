
<% if user_signed_in? %>
<div class="row" id="Middle-text"><h1>Here are your friends' recommendations!</h1></div>

<div class="container-fluid-user-home">
<div class="row"> 
  <aside class="span8">
  <div class="row" id="button-middle">
  <section>
      
        <form action= 'recommendations/new' method="GET">
        <input name="" type="submit" class="btn btn-success" name="activate" value="Add Recommendation!"/>
        </form>
   

        </h1>
        </section>
        </aside>
        </div>

  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th>Genre</th>
      <th></th>
      <th>Watched</th>
      <th></th>
      <th>Votes</th>
      <th></th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @not_seen_movies.each do |recommendation| %>

      <tr>
        <td><h4><%= recommendation.title %></h4></td>
        <td></td>
        <td><h4><%= recommendation.genre %></h4></td>
        <td></td>
        <td><h4><%= recommendation.watched %></h4></td>
        <td></td>
        <td><h4><%= recommendation.votes %></h4></td>
        <td></td>
        <td><h4><%= recommendation.user.email %></h4></td>
        <td></td>
        <% if recommendation.user.id == current_user.id%>
        



        <td><%= link_to 'Destroy', recommendation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       


        <%else%> 
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
    

        <% else %>
<h1>Welcome To The Movie Recommendation App!</h1>
<p>Go ahead and sign up or sign in</p>

<p> <%= link_to 'Sign In', new_user_session_path %> </p>
<p> <%= link_to 'Sign Up', new_user_registration_path %> </p>

<% end %>