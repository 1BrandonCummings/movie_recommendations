
<% if user_signed_in? %>
<div class="row" id="Middle-text"><h1 style="color:gray">Here are your friend's recommendations!</h1></div>

<div class="container-fluid-user-home">
<div class="row"> 
  <aside class="span8">
  <div class="row" id="button-middle">
  <section>
      
        <form action= 'recommendations/new' method="GET">
        <input name="" type="submit" class="btn btn-success" name="activate" value="Add Recommendation!"/>
        </form>
   

        </h1>
        </section>
        </aside>
        </div>

  <table>
  <thead>
    <tr>
      <th style="color:gray"><h4>Title</h4></th>
      <th></th>
      <th style="color:gray"><h4>Genre</h4></th>
      <th></th>
      <th style="color:gray"><h4>Watched</h4></th>
      <th></th>
      <th style="color:gray"><h4>Votes</h4></th>
      <th></th>
      <th style="color:gray"><h4>User</h4></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @not_seen_movies.each do |recommendation| %>

      <tr>
        <td><h4><%= recommendation.title %></h4></td>
        <td></td>
        <td><h4><%= recommendation.genre %></h4></td>
        <td></td>
        <td><h4><%= recommendation.watched %></h4></td>
        <td></td>
        <td><h4><%= recommendation.votes %></h4></td>
        <td></td>
        <td><h4><%= recommendation.user.email %></h4></td>
        <td></td>
        <% if recommendation.user.id == current_user.id%>
        



        <td><%= link_to 'Kill it', recommendation, method: :delete, data: { confirm: 'Seriously?' } %></td>
       


        <%else%> 
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
    

        <% else %>
<p style="color:green;margin-left:20px;">Go ahead and sign up or sign in</p>


<p> <%= link_to 'Sign In', new_user_session_path %> </p>
<p> <%= link_to 'Sign Up', new_user_registration_path %> </p>

<% end %>